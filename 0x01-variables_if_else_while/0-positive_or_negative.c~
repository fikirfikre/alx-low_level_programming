#include <stdio.h>
#include <stdlib.h>
#include <time.h>
/**
 *main - it display the whether the number stored in the variable is postive
 *or negative
 *
 *Return: 0 (success)
 */
int main(void)
{
	int n;

	srand(time(0));
	n = rand() - RAND_MAX / 2;
	if (n > 0)
	  {
	    printf("is postive");
	  }
	else if (n == 0)
	  {
	    printf("is zero");
	  }
	else
	  {
	    printf("is negative");
	  }
	return (0);
}
